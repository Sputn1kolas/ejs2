<!-- views/home.ejs -->

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>Node.js Blog</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <style>
        body {
            padding-top: 20px;
            padding-bottom: 20px;
        }

        .jumbotron {
          margin-top: 10px;
        }
    </style>
</head>

<body>
    <div class="container">
        <%- include('partials/navbar') %>
        <div class="jumbotron">
            <h1>A Few Sends</h1>
            <p class="lead">Check out them below!</p>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="list-group">
                  <!-- loop over blog posts and render them -->
                  <% climbs.forEach((climb) => { %>
                    <a href="/climb/<%= climb.id %>",class="list-group-item">
                      <h4 class="list-group-item-heading"><%= climb.name %></h4>
                      <p class="list-group-item-text">Difficulty: <%= climb.grade %></p>
                      <p class="list-group-item-text">Rating: <%= climb.rating %> </p>
                      <br>
                    </a>
                    <% }) %>
                </div>
            </div>
        </div>
        <%- include('partials/footer') %>
    </div>
</body>

</html>